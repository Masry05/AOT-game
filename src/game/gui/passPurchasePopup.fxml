<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.gui.MainPageController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" minHeight="200.0" minWidth="600.0" prefHeight="200.0" prefWidth="600.0" text="Choose an action " textAlignment="CENTER">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" minHeight="200.0" minWidth="600.0" prefHeight="200.0" prefWidth="600.0" spacing="120.0">
               <children>
                  <Button id="purchase" fx:id="purchase" maxHeight="75.0" maxWidth="150.0" minHeight="75.0" minWidth="150.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="Purchase Weapon">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button id="passTurn" fx:id="passTurn" maxHeight="75.0" maxWidth="150.0" minHeight="75.0" minWidth="150.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="150.0" text="Pass Turn">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
